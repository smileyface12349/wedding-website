@using WeddingWebsite.Models.Theme

<section class="@(Padding ? "with-padding" : "")" style="background: @CssBackground">
    <div class="section-content @(Center ? "centered" : "")">
        @ChildContent
    </div>
</section>

@code {

    [Parameter]
    public required RenderFragment ChildContent { get; set; }
    
    [Parameter]
    public bool Center { get; set; } = false;
    
    [Parameter]
    public bool Padding { get; set; } = true;
    
    [CascadingParameter]
    public SectionTheme? Theme { get; set; }
    
    private string CssBackground => Theme?.Background.MudColor.Value ?? Background;
    
    /// <summary>
    /// Default background - overridden by theme
    /// </summary>
    [Parameter]
    public string Background { get; set; } = "transparent";
}