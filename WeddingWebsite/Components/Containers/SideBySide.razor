<div class="side-by-side-container">
    <div class="side" style="margin-right: @HalfSpacing">
        @LeftContent
    </div>
    <div class="side" style="margin-left: @HalfSpacing">
        @RightContent
    </div>
</div>

@code {
    [Parameter]
    public required RenderFragment LeftContent { get; set; }
    
    [Parameter]
    public required RenderFragment RightContent { get; set; }

    /// <summary>
    /// Half of the space you want to apply between the two sides. Does nothing on narrow screens.
    /// </summary>
    [Parameter]
    public string HalfSpacing { get; set; } = "0px";
}