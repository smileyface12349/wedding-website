@using WeddingWebsite.Models.People
@using WeddingWebsite.Models.WebsiteConfig

@foreach (var person in People) {
    @if (DisplayMode == MeetWeddingPartyDisplay.Chat) {
        <WeddingPartyIntroductionChat Person="@person" IsOnLeftSide="@IsOnLeftSide"/>
    } else {
        <WeddingPartyIntroduction Person="@person"/>
    }
}

@code {
    [Parameter]
    public required IEnumerable<NotablePerson> People { get; set; }
    
    [Parameter]
    public required bool IsOnLeftSide { get; set; }
    
    [Parameter]
    public required MeetWeddingPartyDisplay DisplayMode { get; set; }
}
