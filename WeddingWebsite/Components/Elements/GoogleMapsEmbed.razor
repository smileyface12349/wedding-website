@using WeddingWebsite.Models
@using WeddingWebsite.Models.Credentials
@inject IGoogleMapsApiKey Credentials
<iframe
    class="@ClassName"
    width="600"
    height="@Height"
    style="border:0; height:@Height"
    loading="lazy"
    allowfullscreen
    referrerpolicy="no-referrer-when-downgrade"
    src="https://www.google.com/maps/embed/v1/place?key=@Credentials.GoogleMaps
    &q=@Location.Latitude,@Location.Longitude">
</iframe>

@code {
    [Parameter]
    public required Location Location { get; set; }
    
    [Parameter]
    public string Height { get; set; } = "450px";
    
    [Parameter]
    public string ClassName { get; set; } = "";
}